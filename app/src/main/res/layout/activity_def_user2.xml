<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333333"
    tools:context=".PAP2.DefUser2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333333">

        <Button
            android:id="@+id/def_user_2_show_def"
            android:text="MOSTRAR INFORMAÇÕES"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/def_user_2_inserir"
            android:layout_below="@+id/def_user_2_show_def"
            android:text="Imagem e Nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/def_user_2_inserir_soft"
            android:layout_below="@+id/def_user_2_inserir"
            android:text="Inserir Software"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/def_user_2_ver_soft"
            android:layout_below="@+id/def_user_2_inserir_soft"
            android:text="Ver meus uploads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/def_user_2_share"
            android:layout_below="@+id/def_user_2_ver_soft"
            android:text="PARTILHAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/def_user_2_change_pass"
            android:layout_below="@+id/def_user_2_share"
            android:text="Mudar a senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/def_user_2_delete_user"
            android:layout_below="@+id/def_user_2_change_pass"
            android:text="Eliminar conta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="@drawable/btn_rounded_border_enabled"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"/>

    </RelativeLayout>

</LinearLayout>